@using Microsoft.AspNetCore.Hosting;
@using Microsoft.AspNetCore.Http;
@inject IWebHostEnvironment HostEnvironment
@inject IHttpContextAccessor httpContextAccessor
@{
    ViewData["Title"] = "Demo";
}

<div class="text-center">
    <h1 class="display-4">Hi,</h1>
    <br />
    <h4>@string.Format("I am webapp running on Linux Docker container in {0} environment for demo.", HostEnvironment.EnvironmentName) </h4>
    @*<br />
        <b>EnvironmentName:@HostEnvironment.EnvironmentName</b>
        <br />*@
    @*@Environment.GetEnvironmentVariable("ENVIRONMENT");*@

    <h4>Running on @Environment.GetEnvironmentVariable("RunningEnvironment") </h4>

    <h4>@string.Format("UserHostAddress:{0}", httpContextAccessor.HttpContext.Connection.RemoteIpAddress.ToString())</h4>
</div>